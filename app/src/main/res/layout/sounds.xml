<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:id="@+id/soundsList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sound1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:layout_marginBottom="400dp">

        <TextView
            android:id="@+id/sound1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Snippet 1"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/sound1_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound1_name"
            android:layout_alignStart="@+id/sound1_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beat1_image"
            android:background="@drawable/snippet1"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/sound1_author"
            android:layout_toEndOf="@+id/sound1_name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="300dp">

        <TextView
            android:id="@+id/sound2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Snippet 2"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/sound2_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound2_name"
            android:layout_alignStart="@+id/sound2_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beat2_image"
            android:background="@drawable/snippet1"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/sound2_author"
            android:layout_toEndOf="@+id/sound2_name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout2"
        android:clickable="true"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200dp">

        <TextView
            android:id="@+id/sound3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Snippet 3"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/sound3_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound3_name"
            android:layout_alignStart="@+id/sound3_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beat3_image"
            android:background="@drawable/snippet1"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/sound3_author"
            android:layout_toEndOf="@+id/sound3_name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3"
        android:clickable="true"
        android:layout_marginTop="105dp"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/sound4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Snippet 4"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/sound4_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound4_name"
            android:layout_alignStart="@+id/sound4_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beat4_image"
            android:background="@drawable/snippet1"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/sound4_author"
            android:layout_toEndOf="@+id/sound4_name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_new_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:padding="40dp"
        android:background="@drawable/new_button"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="270dp" />

</RelativeLayout>